<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".RequestFragment">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/vault"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/assitant"/>

    <EditText
        android:layout_marginTop="10dp"
        android:lines="4"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vault"
        android:layout_centerHorizontal="true"
        android:hint="Add service description"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="13dp"/>

    <Button
        android:id="@+id/requestButton"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="REQUEST NOW"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message"
        android:layout_centerVertical="true"
        android:switchPadding="10dp"
        android:text="Pre appoval needed"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/message"
        android:layout_marginBottom="200dp"
        android:switchPadding="10dp"
        android:text="Urgent"/>

</RelativeLayout>
