<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ItemOneFragment">

    <LinearLayout
        android:id="@+id/balance"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:textSize="38sp"
            android:layout_gravity="center"
            android:text="$0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Total Account Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/balance"
        android:id="@+id/vault"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/vault"/>

    <TextView
        android:id="@+id/message"
        android:paddingTop="13dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vault"
        android:text="You currently have no account balance. Fund your account to begin buying and selling digital assets."/>

    <Button
        android:layout_marginBottom="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="FUND ACCOUNT"/>

</RelativeLayout>
